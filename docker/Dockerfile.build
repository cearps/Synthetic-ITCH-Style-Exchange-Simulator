FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY CMakeLists.txt ./
COPY src/ ./src/
COPY third_party/ ./third_party/

RUN mkdir -p build && cd build && \
    cmake .. -DCMAKE_BUILD_TYPE=Release -DBUILD_QRSDP_UI=OFF -DBUILD_TESTING=OFF && \
    cmake --build .

VOLUME /app/output

CMD ["/app/build/qrsdp_cli"]
